{
    "name": "BuXBooster",
    "version": "1.0",
    "description": "Enhance Volume and Download videos from BuX platform",
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "manifest_version": 2,
    "browser_action":{
        "default_popup": "popup.html",
        "default_title": "BuXBooster",
        "default_icon": {
            "48": "Bb48.png",
            "128": "Bb128.png",
            "200": "Bb.png"
        }
    },
    "icons": {
        "48": "Bblogo48.png",
        "128": "Bblogo128.png",
        "200": "Bblogo2.png"
    }
}